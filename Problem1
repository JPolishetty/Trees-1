/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    TreeNode prev;
    public boolean isValidBST(TreeNode root) {
        if(root == null){
            return true;
        }
        //doing inorder traversal, storing prev root and checking its value with curr node
        return inorder(root);
    }
    private boolean inorder(TreeNode root){
        if(root == null ){
            return true;
        }
        boolean case1 = inorder(root.left);
        if(prev != null && prev.val >= root.val){
            return false;
        }
        prev = root;
        boolean case2 = inorder(root.right);
        //if any subtree fails the case, will return false
        return case1 && case2;
        
    }
}
